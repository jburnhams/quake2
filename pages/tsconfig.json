{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@quake2ts/engine": ["../quake2ts/packages/engine/dist/types"],
      "@quake2ts/client": ["../quake2ts/packages/client/dist/types"],
      "@quake2ts/shared": ["../quake2ts/packages/shared/dist/types"],
      "@quake2ts/cgame": ["../quake2ts/packages/cgame/dist/types"],
      "@quake2ts/game": ["../quake2ts/packages/game/dist/types"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
