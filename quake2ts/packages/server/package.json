{
  "name": "@quake2ts/server",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs && tsc --emitDeclarationOnly",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "test:unit": "vitest run --exclude \"**/integration/**\" --exclude \"**/*integration*\"",
    "test:integration": "vitest run --include \"**/integration/**\" --include \"**/*integration*\"",
    "test": "pnpm run test:unit"
  },
  "dependencies": {
    "@quake2ts/engine": "workspace:*",
    "@quake2ts/game": "workspace:*",
    "@quake2ts/shared": "workspace:*",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@quake2ts/test-utils": "workspace:*",
    "@types/ws": "^8.5.12",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
